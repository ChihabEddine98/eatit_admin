<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginBottom="3dp"
    android:elevation="4dp"
    android:padding="0dp"
    app:cardCornerRadius="2dp"
    android:backgroundTint="@color/colorGrisClair">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            >


            <LinearLayout
                android:layout_weight="9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                >


                <TextView
                    android:id="@+id/order_item_id"
                    android:layout_gravity="center_vertical|start"
                    android:text="#Order_ID"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>

                <LinearLayout
                    android:id="@+id/status_layout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_color_gris_clair"
                    >

                    <TextView
                        android:id="@+id/order_item_status"
                        android:layout_gravity="center_vertical|start"
                        android:text="Status"
                        android:textColor="@color/status_danger"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                    <ImageView
                        android:id="@+id/order_item_status_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_battery_20_black_24dp"
                        android:rotation="15"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/order_item_nomComplet"
                    android:layout_gravity="center_vertical|start"
                    android:text="Nom Prénoms"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/order_item_phone"
                    android:layout_gravity="center_vertical|start"
                    android:text="0774873689"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/order_item_adresse"
                    android:layout_gravity="center_vertical|start"
                    android:text="2 Rue Université 75013"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>


            </LinearLayout>

            <ImageView
                android:id="@+id/cart_item_qte"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="16dp"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <info.hoang8f.widget.FButton
                android:id="@+id/btnEdit"
                app:fButtonColor="@color/colorGrisClair"
                android:textColor="@color/bg_color_gris_fonce"
                android:text="Modifier"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cornerRadius="0dp"
                app:shadowEnabled="false"
                />

            <info.hoang8f.widget.FButton
                android:id="@+id/btnRemove"
                app:fButtonColor="@color/colorGrisClair"
                android:textColor="@color/bg_color_gris_fonce"
                android:text="Supprimer"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cornerRadius="0dp"
                app:shadowEnabled="false"

                />

            <info.hoang8f.widget.FButton
                android:id="@+id/btnDetail"
                app:fButtonColor="@color/colorGrisClair"
                android:textColor="@color/bg_color_gris_fonce"
                android:text="Details"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cornerRadius="0dp"
                app:shadowEnabled="false"

                />

            <info.hoang8f.widget.FButton
                android:id="@+id/btnTrack"
                app:fButtonColor="@color/colorGrisClair"
                android:textColor="@color/colorAccent"
                android:text="Suivi"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cornerRadius="0dp"
                app:shadowEnabled="false"

                />


        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>